<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lipata.testproject_extending_activities_mvp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.lipata.testproject_extending_activities_mvp.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.lipata.testproject_extending_activities_mvp.form_activities.addrecord.AddRecordActivity"
            android:label="@string/title_activity_add"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.lipata.testproject_extending_activities_mvp.form_activities.updaterecord.UpdateActivity"
            android:label="@string/title_activity_update"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>